// tsconfig.app.json - SUBSTITUA O CONTEÚDO INTEIRO

{
  "extends": "./tsconfig.json", // Herda as configurações do arquivo principal
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler", // Essencial para Vite/Next.js
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx", // Padrão moderno do React
    "strict": true,
    "noUnusedLocals": false, // Relaxado conforme sua preferência
    "noUnusedParameters": false, // Relaxado conforme sua preferência
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"] // Diz ao TypeScript para olhar apenas dentro da pasta 'src'
}